public class Addition{
	Addition(int a,int b)
	{
		System.out.println(a+b);
	}
}
public class Subtraction{
	Subtraction(int a,int b)
	{
		System.out.println(a-b);
	}
}
public class Multiplication{
	Multiplication(int a,int b)
	{
		System.out.println(a*b);
	}
}
public class Division{
	Divsion(int a,int b)
	{
		System.out.println(a/b);
	}
}
public class ArithmeticCalculator {
	  public static void main(String[] args) {
	    int number1, number2;
	    Scanner input = new Scanner(System.in);
	    System.out.println("Enter first number");
	    number1 = input.nextInt();
	    System.out.println("Enter second number");
	    number2 = input.nextInt();
	    while(true) {
		    System.out.println("Enter 1.Addition 2.Subtraction 3.Multiplication 4.Division 5.Mod 6.Exit ");
		    int choice=input.nextInt();
		    switch (choice) {
		      case 1:
		    	Addition a=new Addition(number1,number2);
		        break;
		      case 2:
		    	Subtraction s=new Subtraction(number1,number2);
		        break;
		      case 3:
		    	Multiplication m=new Multiplication(number1,number2);
			    break;
		      case 4:
		        Division d=new Division(number1,number2);
		        break;
	    }
	 }
   }
}
