package PracticeProject;
import java.util.regex.Matcher;
import java.util.regex.Pattern;
public class Validation {
	public static void main(String args[]) {
		String email1="mddotmustafa@gmail@com";
		String email2="mddotmustafa@gmail.com";
		System.out.println("If Email is valid return true,if not valid return false");
		System.out.println("Email1 is "+emailValidation(email1));
		System.out.println("Email2 is "+emailValidation(email2));	
}
public static boolean emailValidation(String email) {
		String emailRegex= "^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,6}$";
		Pattern pattern=Pattern.compile(emailRegex,Pattern.CASE_INSENSITIVE);
		Matcher matcher=pattern.matcher(email);
		return matcher.find();	
	}
}