class Bike{
	int speed=200;
	void display() {
		System.out.println("this is a bike"+speed);
	}
}
class bike1 extends Bike{
	void speedOfR15() {
		speed=speed+120;
		System.out.println(speed);
	}
}
class bike2 extends Bike{
	void speedofnewR15() {
		System.out.println(speed+200);
	}
}


public class Hiearchiallnheritance {
public static void main(String[] args) {
	bike1 r15=new bike1();
	r15.display();
	r15.speedOfR15();
	
	bike2 newr15=new bike2();
	newr15.speedofnewR15();
	}
	
	
}
